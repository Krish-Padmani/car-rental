# Django Configuration Environment Variables
# Copy this file to .env and update the values for your environment

# Django Secret Key - Generate a new one for production
# You can generate a new secret key at: https://djecrety.ir/
DJANGO_SECRET_KEY=your-secret-key-here

# Debug Mode - Set to 'true' only for development, 'false' for production
DJANGO_DEBUG=true

# Allowed Hosts - Comma-separated list of allowed hostnames/IPs
# For production, set to your domain name(s)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com